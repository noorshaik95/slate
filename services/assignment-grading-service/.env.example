# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/app/storage
STORAGE_MAX_SIZE=26214400

# Observability Configuration
LOG_LEVEL=info
OTEL_EXPORTER_OTLP_ENDPOINT=tempo:4317
OTEL_EXPORTER_OTLP_INSECURE=true
