# Server Configuration
SERVER_HOST=0.0.0.0
GRPC_PORT=50052
WS_PORT=8082
HTTP_PORT=8083

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=slate_video
DB_USER=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=25

# WebRTC Configuration
WEBRTC_PORT_MIN=50000
WEBRTC_PORT_MAX=50100
WEBRTC_PUBLIC_IP=

# Recording Configuration (AC8, AC9)
RECORDING_ENABLED=true
GCS_BUCKET=slate-recordings
GCS_PROJECT_ID=slate-project
RECORDING_TIMEOUT=1800  # 30 minutes (AC9: available within 30 minutes)
TEMP_STORAGE_PATH=/tmp/recordings

# Google Cloud Authentication
# Either set GOOGLE_APPLICATION_CREDENTIALS or use default credentials
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Observability Configuration
TEMPO_ENDPOINT=http://tempo:4317
SERVICE_NAME=video-conferencing-service
PROMETHEUS_PORT=9092
RUST_LOG=info,video_conferencing_service=debug

# Session Configuration
MAX_PARTICIPANTS=50  # AC5: Supports 50 concurrent participants
JOIN_WINDOW_MINUTES=10  # AC3: Join enabled 10 minutes before start
DEFAULT_DURATION_MINUTES=60
MAX_DURATION_MINUTES=240
AUTO_END_AFTER_MINUTES=300
